<h1>New User</h1>
<%= form_with(model: @user, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :campaigns_list %>
    <%= form.text_area :campaigns_list %>
  </div>
  <div>
    <%= form.submit "Create User" %>
  </div>
<% end %>
